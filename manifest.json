{
  "manifest_version": 3,
  "name": "Bluesky Follower Info",
  "description": "Display new followers' profile descriptions and stats in the Bluesky notifications feed.",
  "version": "1.2.0",
  "icons": {
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.bsky.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://*.bsky.app/*"],
    "js": ["content.js"],
    "css": ["content.css"]
  }]
}
